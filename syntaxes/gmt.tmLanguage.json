{
  "name": "Gmt",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#punctuations"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment",
          "match": "^#.*$"
        }]
    },
    "operators": {
      "patterns": [
        {
          "name": "operator",
          "match": ">|<|/|#"
        }]
    },
    "functions": {
      "patterns": [
        {
          "name": "function.construction.advanced",
          "match": "EdgePoint|CenterPoint|Circle3|Midpoint|Parallel|Perp|ABisect|PBisect|ShiftSeg|Compass|FixAngle|CopyAngle|Tangent|PolarLine|PolarPoint"
        },
        {
          "name": "function.construction.basic",
          "match": "Linepoint|Segment|Ray|Line|Intersect|Circle"
        },
        {
          "name": "function.levelsetting",
          "match": "initial|movepoints|hidden|named|result|explore|rules|check_level|undolist"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.named",
          "match": "(?<=named.+\\.)[A-Za-z]"
        },
        {
          "name": "variable.line",
          "match": "[Ss][0-9]+"
        },
        {
          "name": "variable.circle",
          "match": "([c][0-9]+)"
        },
        {
          "name": "variable.other",
          "match": "([A-Za-z][A-Za-z]+[0-9]*)|[a-z]"
        },
        {
          "name": "variable.point",
          "match": "([A-RT-Z][0-9]*)|[A-Z]"
        }]
    },
    "punctuations": {
      "patterns": [
        {
          "name": "punctuation.connector",
          "match": "\\.|\\||:"
        },
        {
          "name": "punctuation.bracket",
          "match": "\\[|\\]"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.argument",
          "match": "((?<=(Intersect|EdgePoint|Tangent).+)(0|1)(?=]))|((?<=Intersect.+)(0|1)(?=,.+]))"
        },
        {
          "name": "constant.value",
          "match": "-?[0-9]+\\.?[0-9]*"
        }
      ]
    }
  },
  "scopeName": "source.gmt"
}