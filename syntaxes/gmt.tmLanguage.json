{
  "name": "Gmt",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#punctuations"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block",
          "match": "^#.*$"
        }]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": ">|<|/|#"
        }]
    },
    "strings": {
      "patterns": [
        {
          "name": "entity.name.class",
          "match": "Linepoint|Segment|Ray|Line|Intersect|EdgePoint|CenterPoint|Circle3|Midpoint|Parallel|Perp|ABisect|PBisect|ShiftSeg|Compass|Circle|FixAngle|CopyAngle|Tangent|PolarLine|PolarPoint"
        },
        {
          "name": "entity.name.function",
          "match": "initial|movepoints|hidden|named|result|explore|rules|check_level|undolist"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.name",
          "match": "[A-Za-z][A-Za-z0-9_]*"
        }]
    },
    "punctuations": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "[\u002e]|:"
        }]
    },
    "constants": {
      "patterns": [
        {
          "name": "markup.bold",
          "match": "((?<=(Intersect|EdgePoint|Tangent).+)(0|1)(?=]))|((?<=Intersect.+)(0|1)(?=,.+]))"
        },
        {
          "name": "string",
          "match": "(?<![A-Za-z])(-?[0-9]+)"
        }
      ]
    }
  },
  "scopeName": "source.gmt"
}